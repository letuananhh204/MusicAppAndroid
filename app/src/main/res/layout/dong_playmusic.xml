<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtPlayMusicIndex"
            android:layout_margin="10dp"
            android:text="1"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtPlayMuiscTenBaiHat"
            android:textSize="17sp"
            android:text="Ten bai hat"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/txtPlayMusicIndex"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtPlayMuiscTenCaSy"
            android:textSize="12sp"
            android:text="Ca sy"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@+id/txtPlayMuiscTenBaiHat"
            android:layout_toRightOf="@+id/txtPlayMusicIndex"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>