<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:padding="7dp"
        android:id="@+id/rlAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTiltleAlbum"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="ALBUM HOT"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtMoreViewAlbum"
            android:textColor="#913677"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:text="Xem ThÃªm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvAlbum"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rlAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    

</RelativeLayout>