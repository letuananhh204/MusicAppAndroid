<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/txttitlePlayList"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#3e3b3b"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="AUTUMN SONG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <ListView
        android:id="@+id/lvPlayList"
        android:layout_below="@+id/txttitlePlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <TextView
        android:id="@+id/txtMorePlayList"
        android:text="Xem thÃªm playlist"
        android:textSize="19sp"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:paddingLeft="5dp"
        android:layout_below="@+id/lvPlayList"
        android:background="#c9c7c7"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="8dp"
        android:textColor="#0a0a0a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>